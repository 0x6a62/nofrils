" Helper Functions
function! NofrilsFocusComments()
    hi Comment ctermfg=0 ctermbg=230 guifg=#000000 guibg=#ffffd7 term=NONE cterm=NONE gui=NONE
    if g:nofrils_heavycomments
        hi Comment ctermfg=89 ctermbg=NONE guifg=#87005f guibg=NONE term=NONE cterm=NONE gui=NONE
    end

    hi Normal ctermfg=215 ctermbg=NONE guifg=#ffaf5f guibg=NONE term=NONE cterm=NONE gui=NONE
    hi LineNr ctermfg=215 ctermbg=NONE guifg=#ffaf5f guibg=NONE term=NONE cterm=NONE gui=NONE
    hi Character ctermfg=215 ctermbg=NONE guifg=#ffaf5f guibg=NONE term=NONE cterm=NONE gui=NONE
    hi String ctermfg=215 ctermbg=NONE guifg=#ffaf5f guibg=NONE term=NONE cterm=NONE gui=NONE
endfunction

function! NofrilsFocusCode()
    hi Normal ctermfg=0 ctermbg=230 guifg=#000000 guibg=#ffffd7 term=NONE cterm=NONE gui=NONE
    if g:nofrils_strbackgrounds
        hi Character ctermfg=231 ctermbg=NONE guifg=#ffffff guibg=NONE term=NONE cterm=NONE gui=NONE
        hi String ctermfg=231 ctermbg=NONE guifg=#ffffff guibg=NONE term=NONE cterm=NONE gui=NONE
    end

    hi Comment ctermfg=215 ctermbg=NONE guifg=#ffaf5f guibg=NONE term=NONE cterm=NONE gui=NONE
    hi LineNr ctermfg=215 ctermbg=NONE guifg=#ffaf5f guibg=NONE term=NONE cterm=NONE gui=NONE
    hi Character ctermfg=215 ctermbg=NONE guifg=#ffaf5f guibg=NONE term=NONE cterm=NONE gui=NONE
    hi String ctermfg=215 ctermbg=NONE guifg=#ffaf5f guibg=NONE term=NONE cterm=NONE gui=NONE

endfunction

function! NofrilsNormal()
    hi Normal ctermfg=0 ctermbg=230 guifg=#000000 guibg=#ffffd7 term=NONE cterm=NONE gui=NONE

    hi Character ctermfg=0 ctermbg=230 guifg=#000000 guibg=#ffffd7 term=NONE cterm=NONE gui=NONE
    hi String ctermfg=0 ctermbg=230 guifg=#000000 guibg=#ffffd7 term=NONE cterm=NONE gui=NONE
    " Optional Syntax Features
    if g:nofrils_strbackgrounds
        hi Character ctermfg=231 ctermbg=NONE guifg=#ffffff guibg=NONE term=NONE cterm=NONE gui=NONE
        hi String ctermfg=231 ctermbg=NONE guifg=#ffffff guibg=NONE term=NONE cterm=NONE gui=NONE
    end

    hi Comment ctermfg=215 ctermbg=NONE guifg=#ffaf5f guibg=NONE term=NONE cterm=NONE gui=NONE
    if g:nofrils_heavycomments
        hi Comment ctermfg=89 ctermbg=NONE guifg=#87005f guibg=NONE term=NONE cterm=NONE gui=NONE
    end

    hi LineNr ctermfg=215 ctermbg=NONE guifg=#ffaf5f guibg=NONE term=NONE cterm=NONE gui=NONE
    if g:nofrils_heavylinenumbers
        hi LineNr ctermfg=89 ctermbg=NONE guifg=#87005f guibg=NONE term=NONE cterm=NONE gui=NONE
    end
endfunction

" Command mappings
command! NofrilsDark :colo nofrils-dark
command! NofrilsLight :colo nofrils-light
command! NofrilsSepia :colo nofrils-sepia
command! NofrilsAcme :colo nofrils-acme
command! NofrilsFocusNormal :call NofrilsNormal()
command! NofrilsFocusCode :call NofrilsFocusCode()
command! NofrilsFocusComments :call NofrilsFocusComments()

" Setup normal settings
call NofrilsNormal()
